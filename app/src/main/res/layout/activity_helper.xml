<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.auxilio.Helper">


    <ToggleButton
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:id="@+id/toggle_button"
        android:layout_marginTop="66dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textOn="You Are Available To Help"
        android:textOff="You Are Not Available"
        android:textColor="#FFFFFF"
        android:checked="false" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Edit Helper Settings"
        android:id="@+id/edit_help"
        android:layout_marginTop="71dp"
        android:background="#616161"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/toggle_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
